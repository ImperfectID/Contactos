            android:textSize="20sp"

            android:layout_marginLeft="8dp"
            android:textColor="#393737"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llamar"
            android:text="llamar"
            />
